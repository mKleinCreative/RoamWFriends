<div class="wrapper nav-bar" style="position: fixed; background-color: rgba(255,255,255,.95); z-index: 150; width: 100%; height: 80px; padding: 17px;">
  <div class="d-flex justify-content-end">
    <div class="mr-auto p-2">
      <a href="/">
        <img src="/images/Logo.png" class="logo" alt="Logo" style="width: 100px; height: 100px;">
      </a>
    </div>
    <% if (user) { %>
      <% if(city) { %>
        <div class=""style="  margin-right:50%;">
        <h3> <%= reviews[0].city %> Reviews </h3>
        </div>
      <% } %>
      <div class="">
        <a href="/reviews/new"><button type="button" class="btn btn-primary btn-md p-2">New Post</button></a>
      </div>
      <div class="p-2">
        <a href="/profile">Profile</a>
      </div>

      <div class="p-2">
        <a href="/login/logout">Log Out</a>
      </div>
    <% } else { %>
      <div class="p-2">
        <a href="/users/new">Sign Up</a>
      </div>
      <div class="p-2">
        <a href="/login">Log In</a>
      </div>
    <% } %>
  </div>
</div>
