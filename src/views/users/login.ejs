<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>

<form class="form container align-items-center" action="/login" method="post" style="">
  <div class="form-group col-md-auto d-flex justify-content-center">
    <img src="/images/Logo.png" alt="Logo" style="width: 100px; height: 100px;">
  </div>
  <h3 class="form-group col-md-auto">Log In</h3>
  <div class="form-group col-md-auto" >
    <label for="email">Email</label>
    <input style="width: 95%; border-radius: 2.px;" type="email" name="email" class="form-text " placeholder="example@example.net">
  </div>
  <div class="form-group col-md-auto" >
    <label for="password">Password</label>
    <input style="width: 95%; border-radius: 2.px;" type="password" name="password" class="form-text " placeholder="...">
  </div>
  <br>
  <p style="color: red;"><%= message  %></p>
  <button type="submit" class="btn btn-primary btn-lg btn-block" name="login-submit">Log In</button>
</form>

