<div class="wrapper nav-bar" style="position: fixed; background-color: rgba(255,255,255,.95); z-index: 150; width: 100%; height: 80px; padding: 17px;">
  <div class="d-flex justify-content-end">
    <div class="mr-auto p-2">
      <a href="/">
        <img src="/images/Logo.png" class="logo" alt="Logo" style="width: 75px; height: 75px;">
      </a>
    </div>
    <% if (user) { %>
      <% if(city) { %>
        <div class="p-2">
        <h3> <% reviews.city %> </h3>  
        </div>
      <% } %>
      <div class="p-2">
        <a href="/reviews/new">New Post</a>
      </div>
      <div class="p-2">
        <a href="/profile">Profile</a>
      </div>
      <div class="p-2">
        <a href="/login/logout">Log Out</a>
      </div>
    <% } else { %>
      <div class="p-2">
        <a href="/users/new">Sign Up</a>
      </div>
      <div class="p-2">
        <a href="/login">Log In</a>
      </div>
    <% } %>
  </div>
</div>
