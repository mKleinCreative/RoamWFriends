<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>

<form class="form container align-items-center" action="/reviews" method="post" style="height: 870px; width: 400px; margin-bottom: 50px;">
  <div class="form-group col-md-auto d-flex justify-content-center">
    <img src="/images/Logo.png" alt="Logo" style="width: 100px; height: 100px;">
  </div>
  <h3 class="form-group col-md-auto">Review</h3>
  <div class="form-group col-md-auto">
    <label for="city">City</label>
    <input style="width: 95%; border-radius: 2.px;" type="text" name="city" placeholder="City">
  </div>
  <div class="form-group col-md-auto">
    <label for="review-type">Review Type</label>
    <br>
    <select name="type_id">
      <option value="0" name="">Choose type of review</option>
      <option value="1" name="Eats"> Eats </option>
      <option value="2" name="NightLife"> Night Life </option>
      <option value="3" name="Monuments"> Monuments </option>
    </select>
  </div>
  <div class="form-group col-md-auto" >
    <label for="title">Title</label>
    <input style="width: 95%; border-radius: 2.px;" type="text" name="title" placeholder="What'd you do?">
  </div>
  <div class="form-group col-md-auto" >
    <label for="body">Review</label>
    <textarea name="body" rows="10" cols="50" style="width: 95%; border-radius: 2.px;" placeholder="Review goes here"></textarea>
  </div>
  <br>
  <p style="color: red;"><%= message  %></p>
  <button type="submit" class="btn btn-primary btn-lg btn-block" name="review-change-submit">Submit</button>
</form>

<% include ../partials/footer.ejs %>