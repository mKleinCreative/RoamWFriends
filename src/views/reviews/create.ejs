<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>

<form class="form container align-items-center" action="/users" method="post" style="height: 570px;">
  <div class="form-group col-md-auto d-flex justify-content-center">
    <img src="/images/Logo.png" alt="Logo" style="width: 100px; height: 100px;">
  </div>
  <h3 class="form-group col-md-auto">Sign Up</h3>
  <div class="form-group col-md-auto" >
    <label for="email">Title</label>
    <input style="width: 95%; border-radius: 2.px;" type="text" name="title" placeholder="example@example.net">
  </div>
  <div class="form-group col-md-auto" >
    <label for="password">Review</label>
    <textarea rows="10" cols="50" style="width: 95%; border-radius: 2.px;" placeholder="..." value="">
  </div>
  <br>
  <p style="color: red;"><%= message  %></p>
  <button type="submit" class="btn btn-primary btn-lg btn-block" name="review-change-submit">Submit</button>
</form>

